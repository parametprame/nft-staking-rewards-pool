    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "4.3.7",
    "@types/jest": "^29.5.14",
    "@types/mocha": ">=9.1.0",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.15",
