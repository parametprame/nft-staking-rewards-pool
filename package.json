{
  "name": "hardhat-project",
  "scripts": {
    "deploy:hh": "npx hardhat run --network hardhat",
    "deploy:optimism": "npx hardhat run --network optimisticEthereum",
    "deploy:optimism-goerli": "npx hardhat run --network goerliOptimism",
